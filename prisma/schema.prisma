// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id             String       @id @default(cuid())
  name           String?
  email          String?      @unique
  emailVerified  DateTime?
  image          String?
  isAdmin        Boolean      @default(false)
  accessVerified Boolean      @default(false)
  discipline     Discipline?
  accounts       Account[]
  sessions       Session[]
  projects       Project[]
  votes          Vote[]
  teamMembers    TeamMember[]
  reactions      Reaction[]
  watchedVideos  WatchedVideo[]
  projectJoins   ProjectJoin[]
  visions        Vision[]
  visionLikes    VisionLike[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum Discipline {
  DEV
  PRODUCT
  DATA
  DESIGNER
}

enum ProjectType {
  MOONSHOT
  SMALL_FEATURE
  DELIGHT
  EFFICIENCY
}

model Project {
  id                String      @id @default(cuid())
  name              String
  description       String      @db.Text
  pitchVideoUrl     String?
  docLink           String?
  projectType       ProjectType
  slackChannel      String
  businessRationale String?     @db.Text
  visionId          String?
  vision            Vision?     @relation(fields: [visionId], references: [id], onDelete: SetNull)
  creatorId         String
  creator           User        @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  votes             Vote[]
  teams             Team[]
  reactions         Reaction[]
  joins             ProjectJoin[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

// Vision documents for inspiring project ideas
model Vision {
  id          String       @id @default(cuid())
  title       String
  description String       @db.Text
  area        String       // Business area (e.g., "Growth", "Retention", "Efficiency")
  docUrl      String?      // Link to full vision document
  kpis        String?      @db.Text // Related KPIs as text or comma-separated
  createdById String
  createdBy   User         @relation(fields: [createdById], references: [id], onDelete: Cascade)
  projects    Project[]    // Projects that reference this vision
  likes       VisionLike[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model VisionLike {
  id        String   @id @default(cuid())
  userId    String
  visionId  String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vision    Vision   @relation(fields: [visionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, visionId])
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  projectId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, projectId])
}

model ProjectJoin {
  id        String   @id @default(cuid())
  userId    String
  projectId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, projectId])
}

model Team {
  id          String       @id @default(cuid())
  projectId   String
  teamName    String
  teamNumber  Int          @default(1)
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  members     TeamMember[]
  submission  Submission?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([teamId, userId])
}

model Submission {
  id        String   @id @default(cuid())
  teamId    String   @unique
  videoUrl  String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ReactionType {
  MEDAL
  HEART
  SHOCK
  PARTY
}

model Reaction {
  id           String       @id @default(cuid())
  userId       String
  projectId    String
  reactionType ReactionType
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())

  @@unique([userId, projectId, reactionType])
}

model WatchedVideo {
  id        String   @id @default(cuid())
  userId    String
  teamId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, teamId])
}

enum AppStage {
  RECEIVING_SUBMISSIONS
  EXECUTING_SPRINT
  SPRINT_OVER
}

model AppState {
  id             String    @id @default("singleton")
  stage          AppStage  @default(RECEIVING_SUBMISSIONS)
  sprintStartDate DateTime?
  sprintEndDate   DateTime?
  testMode       Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
